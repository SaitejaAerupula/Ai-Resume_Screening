# AI Resume Screener - Local Environment Variables
# This file contains your actual environment configuration
# Copy from .env.example and modify with your settings

# NVIDIA API Key (Set your actual API key here)
NVIDIA_API_KEY=your-nvidia-api-key-here

# Server Configuration
FLASK_ENV=development
HOST=127.0.0.1
PORT=7860
DEBUG=true
SHARE_LINK=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=resume_screener.log

# Processing Limits
MAX_FILE_SIZE_MB=10
MAX_SUMMARY_LENGTH=150
MIN_SUMMARY_LENGTH=50
MAX_CONTEXT_LENGTH=500

# UI Configuration
GRADIO_THEME=soft

# Development Settings
AUTO_RELOAD=true
SHOW_DETAILED_ERRORS=true